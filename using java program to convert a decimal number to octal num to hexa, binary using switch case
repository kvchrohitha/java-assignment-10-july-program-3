import java.util.*; 
public class Numberconvertion{
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
	int choice;
	System.out.print("Select  options: \n1 decimal to binary \n2 decimal to octal \n3 decimal to hexa \n"); 
	choice = sc.nextInt();
        System.out.print("Enter Value = "); 
        int num = sc.nextInt();
	switch(choice)
	{
		case 1: String binary = Integer.toBinaryString(num);
        		System.out.println("Binary Value = " + binary);
			break;
		case 2: String octal = Integer.toOctalString(num);
        		System.out.println("Octal Value = " + octal);
			break;
		case 3: String hexa = Integer.toHexString(num);
        		System.out.println("HexaDecimal Value = " + hexa);
			break;
		default: System.out.println("Please enter right choice");
	}
    }
}
